{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}
{{categoria._id}}
{{categoria.nome}}
{{postagem.conteudo}}
<h1>Editar postagem</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagem.titulo}}">

            <label for="Slug">Slug</label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}">

            <label for="titulo">Descrição</label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagem.descricao}}">

            <label for="titulo">Conteúdo</label><br>
            <textarea name="conteudo" id="conteudo" class="form-control"></textarea value="{{postagem.conteudo}}">

            <label for="categoria">Categoria</label>
            <select class="form-select" name="categoria" id="categoria" >
                {{#each categoria}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                     <option value="0">Nenhuma categoria cadastrada</option>
                {{/each}}
            </select>

            <button type="submit" class="btn btn-success mt-4">Editar postagem</button>

        </form>
    </div>
</div>