{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h1>Criar postagem</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" id="titulo" class="form-control" required>

            <label for="Slug">Slug</label>
            <input type="text" name="slug" id="slug" class="form-control" required>

            <label for="titulo">Descrição</label>
            <input type="text" name="descricao" id="descricao" class="form-control" required>

            <label for="titulo">Conteúdo</label><br>
            <textarea name="conteudo" id="conteudo" class="form-control"></textarea required>

            <label for="categoria">Categoria</label>
            <select class="form-select" name="categoria" id="categoria">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                     <option value="0">Nenhuma categoria cadastrada</option>
                {{/each}}
            </select>

            <button type="submit" class="btn btn-success mt-4">Criar postagem</button>

        </form>
    </div>
</div>